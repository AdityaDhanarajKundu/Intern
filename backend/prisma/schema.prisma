generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job{
  id                  Int      @id @default(autoincrement())
  jobTitle            String
  companyName         String
  location            String
  jobType             String
  salaryMin           Int
  salaryMax           Int
  jobDescription      String
  applicationDeadline DateTime?
  status              String   @default("published") // or "draft"
  createdAt           DateTime @default(now())
}
